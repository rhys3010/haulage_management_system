{% extends 'templates/app.twig' %}
{% block content %}
    {% include 'templates/partials/nav.twig' %}
      <div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumb -->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="{{ path_for('dashboard') }}">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Log a Journey</li>
          </ol>
          <!-- Create Journey Card -->
          <div class="card mb-3 mx-auto card-create-journey">
            <div class="card-header">
              <i class="fa fa-fw fa-table mx-2"></i>Log a New Journey
            </div>
            <div class="card-body">
              <form action="" method="POST" autocomplete="off">
                <div class="form-group row">
                  <label for="source" class="col-sm-4 col-form-label">Source<span class="fa fa-question-circle mx-3 text-primary" data-toggle="tooltip" title="Enter the first 2 characters of the source location's postcode (e.g. 'LL')"></span></label>
                  <div class="col-sm-8">
                    <input id="source" list="locations" class="form-control location-input" name="source"  value="" placeholder="AZ"/>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="destination" class="col-sm-4 col-form-label">Destination<span class="fa fa-question-circle mx-3 text-primary" data-toggle="tooltip" title="Enter the first 2 characters of the destination location's postcode (e.g. 'SY')"></span></label>
                  <div class="col-sm-8">
                    <input id="destination" list="locations" class="form-control location-input" name="destination" value="" placeholder="AZ"/>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="haulier" class="col-sm-4 col-form-label">Haulier</label>
                  <div class="col-sm-8">
                    <input id="haulier" list="hauliers" class="form-control haulier-input" name="haulier" value="" placeholder="Enter Haulier Name"/>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="haulier" class="col-sm-4 col-form-label">Date & Time</label>
                  <div class="col-sm-8">
                    <input id="datetime" type="datetime-local" class="form-control haulier-input" name="datetime" value=""/>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col">
                    <button class="btn btn-success text-white" type="submit">Log Journey</button>
                  </div>
                </div>
                {{ csrf.field | raw }}
              </form>
              <div {{ errors ? '' : 'hidden' }} class="alert alert-danger">
                {{ errors | first | first }}
              </div>
              <div {{ success ? '' : 'hidden' }} class="alert alert-success">
                {{ success }}
              </div>
          </div>
        </div>
      </div>
      <!-- Datalist for locations populated from SQL databsae -->
      <datalist id="locations">
        {% for location in location.all %}
          <option data-value="{{ location.area_code }}">{{ location.area_code }} ( {{ location.name }} )</option>
        {% endfor %}
      </datalist>

      <!-- Datalist for hauliers populated from SQL databsae -->
      <datalist id="hauliers">
        {% for haulier in haulier.all %}
          <option data-value="{{ haulier.id }}">{{ haulier.name }} ( {{ haulier.short_name }} )</option>
        {% endfor %}
      </datalist>

{% endblock %}
