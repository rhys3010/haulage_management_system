{% extends 'templates/app.twig' %}
{% block content %}
  {% include 'templates/partials/nav.twig' %}
  <div class="content-wrapper">
    <div class="container-fluid">
      <!-- Breadcrumb -->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="{{ path_for('dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Manage Hauliers</li>
      </ol>
      <!-- Register a Haulier -->
      <div class="card mb-3 card-register-haulier">
        <div class="card-header" data-toggle="collapse" data-target="#register-haulier">
          <i class="fa fa-user-plus mx-2"></i>Register New Haulier<i class="fa fa-sort-down pull-right"></i>
        </div>
        <div class="collapse show" id="register-haulier">
          <div class="card-body">
            <div {{ errors ? '' : 'hidden' }} class="alert alert-danger">
              {{ errors | first | first }}
            </div>
            <form action="{{ path_for('hauliers.add') }}" method="POST" autocomplete="off">
              <div class="input-group mb-3">
                <input id="name" type="text" class="form-control" name="name" placeholder="Haulier Name" value="">
              </div>
              <button class="btn btn-success btn-block text-white btn-register-haulier mx-auto" type="submit">Register</button>
              {{ csrf.field | raw }}
            </form>
          </div>
        </div>
      </div>
      <!-- Hauliers Table -->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-address-card mx-2"></i>Registered Hauliers
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Date Registered</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Date Registered</th>
                  <th></th>
                  <th></th>
                </tr>
              </tfoot>
              <tbody>
                {% for haulier in haulier.all %}
                  <div class="modal fade" id="deleteHaulierModal-{{ haulier.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteHaulierModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteHaulierModalLabel">Delete {{ haulier.name }}?</h5>
                          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                          </button>
                        </div>
                        <div class="modal-footer">
                          <button class="btn btn-secondary btn-danger" type="button" data-dismiss="modal">Cancel</button>
                          <form action="{{ path_for('hauliers.remove') }}" method="POST" autocomplete="off">
                            <input hidden id="id" type="text" name="id" value="{{ haulier.id }}">
                            <button class="btn btn-primary btn-success" type="submit" href="">OK</button>
                            {{ csrf.field | raw }}
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <tr>
                    <td>{{ haulier.id }}</td>
                    <td>{{ haulier.name }}</td>
                    <td>{{ haulier.created_at }}</td>
                    <td class="text-center"><button class="btn btn-primary btn-sm">View Journeys</button></td>
                    <td class="text-center">
                      <button type="submit"><i class="fa fa-trash text-danger" role="button" data-toggle="modal" rel="tooltip" data-target="#deleteHaulierModal-{{ haulier.id }}" data-placement="right" title="Delete Haulier" ></i></button>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
